{
    "parser": "babel-eslint",
    "extends": ["airbnb", "plugin:@typescript-eslint/recommended"],
    "env": {"browser": true},
    "globals": {"_CONFIG": false},
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "ecmaFeatures": {"jsx": true},
                "project": "./tsconfig.json",
                "tsconfigRootDir": "."
            },
            "plugins": ["@typescript-eslint"],
            "settings": {
                "import/resolver": {
                    "node": {
                        "extensions": [".js", ".jsx", ".ts", ".tsx"]
                    }
                }
            }
        }
    ],
    "rules": {
        "@typescript-eslint/explicit-member-accessibility": 0,
        "@typescript-eslint/no-var-requires": 0,
        "arrow-body-style": 0,
        "brace-style": ["error", "stroustrup"],
        "class-methods-use-this": 0,
        "default-case": 0,
        "import/prefer-default-export": 0,
        "indent": ["error", 4, {"SwitchCase": 1, "ignoredNodes": ["* > TemplateLiteral > *"]}],
        "no-console": 1,
        "no-debugger": 1,
        "no-new": 0,
        "no-param-reassign": 0,
        "no-undef": 1,
        "no-underscore-dangle": 0,
        "no-unused-vars": 1,
        "no-use-before-define": 0,
        "object-curly-newline": 0,
        "prefer-arrow-callback": 0,
        "prefer-destructuring": ["error", {"array": false, "object": false}],
        "quote-props": ["error", "consistent"],
        "react/jsx-curly-spacing": [0, {"when": "always"}],
        "react/jsx-filename-extension": [2, {"extensions": [".jsx", ".tsx"]}],
        "react/jsx-indent": [2, 4, {"checkAttributes": true}],
        "react/jsx-indent-props": [2, 4],
        "react/prefer-stateless-function": 0
    }
}
