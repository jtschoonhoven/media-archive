{
    "extends": ["tslint-config-airbnb", "tslint-react"],
    "rules": {
        "brace-style": ["error", "stroustrup"],
        "function-name": false,
        "import-name": false,
        "indent": ["spaces", 4],
        "jsx-curly-spacing": [true, 1],
        "jsx-no-multiline-js": false,
        "max-line-length": { "options": [100] },
        "no-any": false,
        "no-consecutive-blank-lines": false,
        "quote-props": ["error", "consistent"],
        "ter-indent": ["spaces", 4],
        "typedef": true,
        "variable-name": false
    },
    "jsRules": {
        "brace-style": ["error", "stroustrup"],
        "function-name": false,
        "import-name": false,
        "indent": ["spaces", 4],
        "jsx-curly-spacing": [true, 1],
        "jsx-no-multiline-js": false,
        "max-line-length": { "options": [100] },
        "no-consecutive-blank-lines": false,
        "quote-props": ["error", "consistent"],
        "ter-indent": ["spaces", 4]
    }
}
