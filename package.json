{
    "name": "media-archive",
    "version": "0.0.1a",
    "description": "Web app for storing and indexing digitized documents, photos, audio, and video.",
    "private": true,
    "author": "Jonathan Schoonhoven",
    "license": "MIT",
    "homepage": "https://github.com/jtschoonhoven/media-archive#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jtschoonhoven/media-archive.git"
    },
    "scripts": {
        "clean": "find ./dist/* ! -name 'index.html' ! -name 'favicon.ico' | xargs rm",
        "watch": "npm run clean && webpack --watch --config ./webpack.config.js",
        "build": "npm run clean && webpack --config ./webpack.config.js",
        "serve": "node_modules/nodemon/bin/nodemon.js server/server.js",
        "start": "node server/server.js",
        "zip": "npm run build && zip -r dist/archive.zip ./dist ./server package.json"
    },
    "dependencies": {
        "backbone": "^1.3.3",
        "bootstrap": "^4.1.3",
        "express": "^4.16.4",
        "formik": "^1.3.2",
        "immutable": "^4.0.0-rc.12",
        "jquery": "^3.3.1",
        "lodash": "^4.17.11",
        "popper.js": "^1.14.5",
        "prop-types": "^15.6.2",
        "react": "^16.6.3",
        "react-dom": "^16.6.3",
        "redux": "^4.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.1.6",
        "@babel/preset-env": "^7.1.6",
        "@babel/preset-react": "^7.0.0",
        "autoprefixer": "^9.3.1",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.4",
        "css-loader": "^1.0.1",
        "eslint": "^5.9.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-react": "^7.11.1",
        "exports-loader": "^0.7.0",
        "node-sass": "^4.10.0",
        "nodemon": "^1.18.6",
        "postcss-loader": "^3.0.0",
        "precss": "^3.1.2",
        "sass-loader": "^7.1.0",
        "serve": "^10.1.1",
        "style-loader": "^0.23.1",
        "webpack": "^4.26.0",
        "webpack-cli": "^3.1.2"
    }
}
